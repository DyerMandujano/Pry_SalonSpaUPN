@model Pry_Solu_SalonSPA.Models.Persona
<link rel="stylesheet" href="~/css/VClientes/_ModalDetalles.css" />

<div id="modalDetallesCliente" class="modal-overlay" style="display:none;">
    <div class="modal-detalles">
        <div class="modal-header">
            <h5>Detalles del Cliente</h5>
            <button type="button" class="btn-cerrar-modal">×</button>
        </div>
        <div class="modal-body">
            <p><strong>Nombres:</strong> @Model.Nombres</p>
            <p><strong>Apellidos:</strong> @Model.Apellidos</p>
            <p><strong>Teléfono:</strong> @Model.Telefono</p>
            <p><strong>DNI:</strong> @Model.Dni</p>
            <p><strong>Fecha de Nacimiento:</strong> @Model.FechaNacimiento.ToShortDateString()</p>
            <p><strong>Género:</strong> @Model.Genero</p>
            <p><strong>Estado:</strong> @(Model.Estado == 1 ? "Activo" : "Inactivo")</p>
        </div>
    </div>
</div>
